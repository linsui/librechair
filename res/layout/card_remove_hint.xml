<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/card_removal_hint"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/primary_text_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_card_removal_hint" />
    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_text_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_card_removal_hint" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/delete_item_action"
            style="@style/Widget.AppCompat.ButtonBar"
            tools:text="Action"
            android:backgroundTint="@color/qsb_background_hotseat_white"
            android:textColor="@color/primary_text_material_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/remove_action"
            style="@style/Widget.AppCompat.ButtonBar"
            android:text="@string/delete"
            android:backgroundTint="@color/qsb_background_hotseat_white"
            android:textColor="@color/primary_text_material_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>